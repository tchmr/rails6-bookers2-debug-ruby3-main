<h2>Follow Users</h2>
<table class='table table-hover table-inverse'>
  <% if @follows.present? %>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @follows.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
              <%= image_tag user.get_profile_image, size:'50x50' %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.following_users.count %></td>
          <td>フォロワー数: <%= user.followed_users.count %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    ユーザーはいません
  <% end %>
</table>