<%= form_with model: group do |f| %>
  <div>
    <p>グループ名</p>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div>
    <p>紹介文</p>
    <%= f.text_area :introduction, class: 'form-control', size: "10x10" %>
  </div>

  <div>
    <p>グループ画像</p>
    <%= f.file_field :profile_image %>
  </div>

  <div>
    <%= f.submit '送信', class: "btn btn-success" %>
  </div>
<% end %>