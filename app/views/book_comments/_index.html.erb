<% @book.book_comments.each do |comment| %>
  <tr>
    <td>
      <%= link_to comment.user do %>
        <%= image_tag comment.user.get_profile_image, size:"100x100" %><br>
        <%= comment.user.name %>
      <% end %>
    </td>
    <td><%= comment.body %></td>
    <% if comment.posted_by?(current_user) %>
      <td><%= link_to 'Destroy', book_book_comment_path(@book, comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger", remote: true %></td>
    <% end %>
  </tr>
<% end %>