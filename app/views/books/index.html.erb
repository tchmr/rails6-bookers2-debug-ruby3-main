<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render partial: 'users/info', locals: { user: current_user } %>
      <h2 class="mt-3">New book</h2>
      <%= render 'layouts/errors', obj: @book %>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <%= render 'searches/header' %>
      <h2>Books</h2>
      <%= render 'index', books: @books%>
      <!--日付指定件数検索-->
      <%= form_with url: book_count_search_path, method: :get, local: false, class: 'book-count-search-form' do |f| %>
        <%= f.date_field :date %>
        <%= f.submit '検索', class: "btn btn-success" %>
      <% end %>
      <div class="book-count-search-result"></div>
    </div>
  </div>
</div>