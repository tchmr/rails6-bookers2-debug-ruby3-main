<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorite_path(book), method: :delete, class: "favorited", remote: true do %>
    <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorite_path(book), method: :post, class: "not-favorited", remote: true do %>
    <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
  <% end %>
<% end %>